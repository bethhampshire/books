<Window x:Class="BookAppUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:BookAppUI.ViewModels"
        xmlns:views="clr-namespace:BookAppUI.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    <Border Background="#EDF2F4" CornerRadius="15" BorderThickness="3" BorderBrush="#2B2D42">
        <ContentControl Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                    <views:HomeView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:SessionViewModel}">
                    <views:SessionView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Border>
</Window>
