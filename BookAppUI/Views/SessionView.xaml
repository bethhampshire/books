<UserControl 
    x:Class="BookAppUI.Views.SessionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:BookAppUI.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="BasicButton" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="#EDF2F4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="FontWeight" Value="Medium"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Border
                                Name="border"
                                BorderBrush="#EDF2F4"
                                BorderThickness="3"
                                Background="Transparent"
                                CornerRadius="15"
                                Height="35"></Border>
                            <ContentPresenter x:Name="contentPresenter" 
                                              Focusable="False" 
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              RecognizesAccessKey="True" 
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EDF2F4" />
                                <Setter Property="Foreground" Value="#4D9078"></Setter>
                                <Setter Property="Cursor" Value="Hand"></Setter>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EDF2F4" />
                                <Setter Property="Foreground" Value="#4D9078"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="195" />
                <RowDefinition Height="90" />
                <RowDefinition Height="100" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0"
                        Grid.Column="0"
                        Margin="10 10 20 10"
                        Orientation="Horizontal"
                        >
                <StackPanel Width="175"
                            Margin="15 0 0 0"
                            Height="175">
                    <TextBlock Background="#8D99AE"
                               Height="180">
                        
                    </TextBlock>
                </StackPanel>
                <StackPanel Width="175"
                            Margin="15 0 0 0"
                            Height="175">
                    <TextBlock Background="#8D99AE"
                               Height="180">

                    </TextBlock>
                </StackPanel>
                <StackPanel Width="175"
                            Margin="15 0 0 0"
                            Height="175">
                    <TextBlock Background="#8D99AE"
                               Height="180">

                    </TextBlock>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Grid.Column="0"
                        Orientation="Vertical"
                        Margin="30 0 0 0"
                        VerticalAlignment="Center"
                        >
                <StackPanel Orientation="Horizontal"
                            >
                    <TextBlock FontSize="28"
                               Foreground="#2B2D42"
                               Text="BARCODE:  ">
                    </TextBlock>
                    <TextBlock FontSize="28"
                               Foreground="#2B2D42"
                               >
                        2135748645
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="28"
                               Foreground="#2B2D42"
                               Text="TITLE:  ">
                    </TextBlock>
                    <TextBlock FontSize="28"
                               Foreground="#2B2D42">
                        Norwegian wood
                    </TextBlock>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="2"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <TextBox Margin="30 0 0 0"
                         Width="365"
                         Height="30"
                         HorizontalAlignment="Left">

                </TextBox>
                <Button Margin="15"
                        Height="30"
                        Background="Transparent"
                        Foreground="#2B2D42"
                        BorderThickness="0"
                        FontSize="20">
                    &#x1f50e;
                </Button>
            </StackPanel>
            
            <Button Style="{StaticResource BasicButton}"
            Grid.Row="3"
            Content="Back"
                    Command="{Binding NavigateHomeCommand}"
                    Margin="30 0 0 0"
                    HorizontalAlignment="Left"
            Width="130">
            </Button>
            <Button Style="{StaticResource BasicButton}"
            Grid.Row="3"
            Grid.Column="1"
            Content="End session"
                    Command="{Binding NavigateEndSessionCommand}"
                    Margin="15 0 15 0"
            Width="130">
            </Button>
        </Grid>
    </Grid>
</UserControl>
