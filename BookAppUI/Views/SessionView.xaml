<UserControl 
    x:Class="BookAppUI.Views.SessionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:BookAppUI.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="195" />
                <RowDefinition Height="90" />
                <RowDefinition Height="100" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Border Background="#2B2D42"
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    Height="30">
                <TextBlock Grid.Row="0" 
                       Grid.Column="0" 
                       Foreground="#EDF2F4"
                       Margin="30 0 0 0"
                       FontSize="18">
                BookApp
                </TextBlock>
            </Border>
            <Border Background="#2B2D42"
                    Grid.Column="1"
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    Height="30">
                <Button Grid.Row="0" 
                    Grid.Column="1"
                    Width="18"
                    FontSize="20"
                    Background="Transparent"
                    Foreground="#D90429"
                    BorderThickness="0"
                    Content="&#x2718;"
                    HorizontalAlignment="Right"
                    Margin="0 0 15 0" >
                </Button>
            </Border>
            <StackPanel Grid.Row="1"
                        Grid.Column="0"
                        Margin="10 10 20 10"
                        Orientation="Horizontal"
                        >
                <StackPanel Width="175"
                            Margin="15 0 0 0"
                            Height="175">
                    <TextBlock Background="#8D99AE"
                               Height="180">
                        
                    </TextBlock>
                </StackPanel>
                <StackPanel Width="175"
                            Margin="15 0 0 0"
                            Height="175">
                    <TextBlock Background="#8D99AE"
                               Height="180">

                    </TextBlock>
                </StackPanel>
                <StackPanel Width="175"
                            Margin="15 0 0 0"
                            Height="175">
                    <TextBlock Background="#8D99AE"
                               Height="180">

                    </TextBlock>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="2"
                        Grid.Column="0"
                        Orientation="Vertical"
                        Margin="30 0 0 0"
                        VerticalAlignment="Center"
                        >
                <StackPanel Orientation="Horizontal"
                            >
                    <TextBlock FontSize="28"
                               Foreground="#2B2D42"
                               Text="BARCODE:  ">
                    </TextBlock>
                    <TextBlock FontSize="28"
                               Foreground="#2B2D42"
                               >
                        2135748645
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="28"
                               Foreground="#2B2D42"
                               Text="TITLE:  ">
                    </TextBlock>
                    <TextBlock FontSize="28"
                               Foreground="#2B2D42">
                        Norwegian wood
                    </TextBlock>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="3"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <TextBox Margin="30 0 0 0"
                         Width="365"
                         Height="30"
                         HorizontalAlignment="Left">
                    
                </TextBox>
                <Button Margin="15"
                        Height="30"
                        Background="Transparent"
                        Foreground="#2B2D42"
                        BorderThickness="0"
                        FontSize="20">
                    &#x1f50e;
                </Button>
            </StackPanel>
            <Button
            Grid.Row="4"
                Margin="30 0 0 0"
            Command="{Binding NavigateHomeCommand}"
            Content="Back" 
                Width="50"
                HorizontalAlignment="Left"
                BorderThickness="0"
                />

            <Button Grid.Column="1"
                    Grid.Row="4"
                    Content="End session"
                    Command="{Binding NavigateEndSessionCommand}"
                    Margin="15 0 15 0"
                    BorderThickness="0">
            </Button>
            <!--<TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Margin="0 20 0 0"
            Text="{Binding StartSessionMessage}" />-->
        </Grid>
    </Grid>
</UserControl>
